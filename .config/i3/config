# Screenshot like Snipping Tool in Windows
bindsym Shift+Mod4+s exec flameshot gui --clipboard

# Rofi Alt Tab Functionality like in Windows
bindsym $mod+Tab exec --no-startup-id rofi -show window

# Launches file explorer like in windows but on workspace 5 and only navigates
# to it, when it actually has opened.
bindsym Mod4+e exec --no-startup-id ~/.local/bin/dotfilelaunch .local/bin/scripts/conditionallaunch dolphin 5
bindsym Mod4+period exec --no-startup-id rofimoji --action type 

# may use conditionallaunch bitwarden 10 ? 
bindsym $mod+b exec --no-startup-id ~/.local/bin/dotfilelaunch .local/bin/scripts/conditionallaunch bitwarden 10 
# bindsym $mod+b exec --no-startup-id ~/.local/bin/dotfilelaunch .local/bin/scripts/bitwardenlaunch

# You can pass tmux commands directly from i3! This makes window switching so much
# easier
bindsym Mod4+s exec --no-startup-id "tmux display-popup -E 'tmux choose-tree -s'"
bindsym Mod4+1 exec --no-startup-id "tmux select-window -t :1"
bindsym Mod4+2 exec --no-startup-id "tmux select-window -t :2"
bindsym Mod4+3 exec --no-startup-id "tmux select-window -t :3"
bindsym Mod4+4 exec --no-startup-id "tmux select-window -t :4"
bindsym Mod4+5 exec --no-startup-id "tmux select-window -t :5"
bindsym Mod4+6 exec --no-startup-id "tmux select-window -t :6"
bindsym Mod4+7 exec --no-startup-id "tmux select-window -t :7"
bindsym Mod4+8 exec --no-startup-id "tmux select-window -t :8"
bindsym Mod4+9 exec --no-startup-id "tmux select-window -t :9"

# # Audio (paglobalvolume is a custom script which basically controls all sinks
# # at once because I am lazy).
bindsym XF86AudioRaiseVolume exec --no-startup-id paglobalvolume plus 3%  && pkill -RTMIN+11 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id paglobalvolume minus 3%  && pkill -RTMIN+11 i3blocks
bindsym XF86AudioMute exec --no-startup-id paglobalvolume mute && pkill -RTMIN+11 i3blocks 

# # Brightness
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl -q set 10%-
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl -q set 10%+

# automount usb drives
exec --no-startup-id udiskie &
# network manager applet
exec --no-startup-id nm-applet
# wallpaper
exec --no-startup-id hsetroot -fill $DOTFILES/.wallpaper.jpg
# terminal
exec --no-startup-id alacritty
# fancy terminal opacity
exec --no-startup-id picom -b
# this should auto-recognize external displays but oh well doen't work that well
